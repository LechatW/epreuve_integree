{% extends 'base.html.twig' %}

{% block title %}Ajout d'une session{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-9 shadow-lg rounded p-3">
            {{form_start(form)}}
            {{form_row(form.name)}}
            <div class="row">
                <div class="col">
                    {{form_row(form.startAt)}}
                </div>
                <div class="col">
                    {{form_row(form.endAt)}}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{form_row(form.registrationStartAt)}}
                </div>
                <div class="col">
                    {{form_row(form.registrationEndAt)}}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{form_row(form.location)}}
                </div>
                <div class="col">
                    {{form_row(form.maxRegistration)}}
                </div>
            </div>

            <div class="row justify-content-end mr-4">
                <input class="text-right btn btn-primary" type="submit" value="Valider">
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}