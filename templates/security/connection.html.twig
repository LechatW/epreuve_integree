{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5 mb-5">
        <div class="card border border-dark col-10 col-sm-6">
            <div class="card-body">
                <h4 class="card-title">Se connecter</h4>
                
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey | trans(error.messageData,'security') }}
                </div>
            {% endif %}
    
                <form class="form" action="{{path('login')}}" method="POST">
                    <div class="mb-3">
                        <input class="form-control" type="text" required name="_username" placeholder="login" value="{{lastUserName}}">
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="password" required name="_password" placeholder="password">
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-sign-in-alt"></i>&nbsp;Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}